<h1><%= ExchangeRate.model_name.human %> RUBI/REAL</h1>


<% if admin_signed_in? %>
  <h3><%= link_to 'Registrar taxa de câmbio', new_exchange_rate_path %></h3>
  <section class="mt-3">
    <% if @exchange_rates.any? %>
      <% @exchange_rates.each do |er| %>
        <p><%= link_to I18n.l(er.register_date), exchange_rate_path(er) %> <%= er.rubi_coin %> rubi equivale a <%= number_to_currency er.brl_coin %> reais | <%= ExchangeRate.human_attribute_name(:status) %>: <%= ExchangeRate.human_attribute_name(er.status) %></p>
      <% end %>
    <% else %>
      <p>Nenhuma taxa de câmbio cadastrada<p>
    <% end %>
<% else %>
  <section class="mt-3">
    <% if @approved_exchange_rates.any? %>
      <% @approved_exchange_rates.each do |er| %>
        <p><%= I18n.l(er.register_date) %> <%= er.rubi_coin %> rubi equivale a <%= number_to_currency er.brl_coin %> reais.</p>
      <% end %>
    <% else %>
      <p>Nenhuma taxa de câmbio cadastrada<p>
    <% end %>
  </section>
<% end %>