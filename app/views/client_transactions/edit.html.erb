<div class="card mb-4">
	<div class="card-header">
		<i class="fas fa-table me-1"></i>Formul√°rio
	</div>
  <div class="card-body">
    <%= form_with(model: @client_transaction) do |f| %>
      <div class="mb-3 row">
        <div class="col">
          <%= f.label :status, class: "form-label" %>
          <%= f.select(:status, options_for_client_transaction_status(@client_transaction.status), {:selected => "Pendente"}, {:class =>"form-select", include_blank: false})%>
        </div>
      </div>
      <div class="form-group button-form-group">
        <%= f.submit 'Salvar', disable_with: 'Salvando...', class:"btn btn-primary" %>
      </div>
      <div class="form-group button-form-group">
        <%= link_to 'Voltar', client_transactions_path, class:"btn btn-light" %>
      </div>
    <% end %>
  </div>
</div>
