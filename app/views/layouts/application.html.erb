<!DOCTYPE html>
<html>
  <head>
    <title>Pagamentos</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag "custom", "data-turbo-track": "reload" %>
  </head>

  <body>
    <h1>Pagamentos</h1>

    <nav>
      <% if admin_signed_in? %>
        <div style="display: flex; flex-direction: row;">
          <%= "Nome de UsuÃ¡rio: #{current_admin.full_name}" %> |
          <%= "E-mail: #{current_admin.email}" %> |
          <%= "Status: #{Admin.human_enum_name(:status, current_admin.status)}" %> |  
          <%= button_to 'Sair', destroy_admin_session_path, method: :delete %>
        </div>
      <% else %>
        <div>
          <%= link_to 'Entrar', new_admin_session_path %>
        </div>
      <% end %>
    </nav>
    
    <div>
      <br>
      <%= alert%>
      <%= notice%>
    </div>
    <%= yield %>
  </body>
</html>
